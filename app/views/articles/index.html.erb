<h1 class="center">All Articles</h1>
  <div class="center"><%= link_to 'New article', new_article_path %></div><br>

  <!-- <ul class="center"> -->
    <% @articles.each do |article | %>
      <div class="center"><%= link_to article.title, article_path(article) %></div><br>
    <% end %>
  <!-- </ul> -->


  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>

    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>